@model AutoLotDAL.Inventory

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Marka
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Make)
        </dd>

        <dt>
            Kolor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt>
            Nazwa samochodu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarNickName)
        </dd>

    </dl>
</div>
<a href="@Url.Action("Edit",new { id=Model.CarId })">
    <span class="glyphicon glyphicon-edit"></span> &nbsp;Edytuj
</a>
&nbsp;|&nbsp;
<a href="@Url.Action("Delete",new { id=Model.CarId })">
    <span class="glyphicon glyphicon-trash"></span> &nbsp;Usuń
</a>
&nbsp;|&nbsp;

<a href="@Url.Action("Index",new { id=Model.CarId })">
    <span class="glyphicon glyphicon-list"></span> &nbsp;Wróć do garażu
</a>


