@model AutoLotDAL.Inventory

@{
    ViewBag.Title = "Usuń";
}

<h2>Usuń</h2>

<h3>Jesteś pewny że chcesz usunąć ten samochód?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Marka
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Make)
        </dd>

        <dt>
            Kolor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt>
            Nazwa auta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarNickName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-trash"></span> &nbsp; Usuń
    </button> | 
    <a href="@Url.Action("Index")">

        <span class="glyphicon glyphicon-list"></span> &nbsp; Wróć do garażu
    </a>

</div>
    }
</div>
